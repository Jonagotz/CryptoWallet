<p style="color: green"><%= notice %></p>

<form>
<div class="form-group">
    <%= label_tag nil, t("type.description"), style: "display: block" %>
    <%= text_field_tag nil, @mining_type.description, class:"form-control", placeholder:"Proof of Work", disabled: true %>
  </div>

  <div class="form-group">
    <%= label_tag nil, t("type.acronym"), style: "display: block" %>
    <%= text_field_tag nil, @mining_type.acronym, class:"form-control", placeholder:"PoW", disabled: true %>
  </div>

</form>

<p></p>

<div class="btn-group" role="group" aria-label="Basic example">
  <%= link_to t('links.edit'), edit_mining_type_path(@mining_type), type:"button", class:"btn btn-secondary"%>
  <%= link_to t('links.back'), mining_types_path, type:"button", class:"btn btn-secondary" %>
</div>

<p>
  <%= button_to t('links.delete'), @mining_type, method: :delete, class:"btn btn-danger" %>
</p>


