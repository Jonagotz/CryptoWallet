<p style="color: green"><%= notice %></p>

<h1><%= "#{MiningType.model_name.human(count: @mining_types.count)}" %></h1>
<div id="mining_types">

  <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">MiningType.human_attribute_name(:description)</th>
      <th scope="col">MiningType.human_attribute_name(:acronym)</th>
      <th scope="col"><%= t("links.show")%></th>
    </tr>
  </thead>
  <tbody>
    <% @mining_types.each do |mining_type| %>
      <%= render partial: 'mining_type', locals: {mining_type: mining_type} %>
    <% end %>
  </tbody>
</table>

</div>

<%= link_to t('links.register'), new_mining_type_path, class:"btn btn-primary" %>
