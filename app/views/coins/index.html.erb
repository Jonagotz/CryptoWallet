<p style="color: green"><%= notice %></p>

<h1><%= "#{Coin.model_name.human(count: @coins.count)}" %></h1>
<div id="Moedas">

  <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"> <%= Coin.human_attribute_name(:description)%> </th>
      <th scope="col"><%= Coin.human_attribute_name(:acronym)%></th>
      <th scope="col"><%= Coin.human_attribute_name(:url_image)%></th>
      <th scope="col"><%= t("links.show")%></th>
    </tr>
  </thead>
   <tbody>

  <% @coins.each do |coin| %>
    <%= render partial: 'coin', locals: {coin: coin} %>
   <% end %>
  </tbody>
  </table>

</div>

<%= link_to t('links.register'), new_coin_path, class:"btn btn-primary" %>

